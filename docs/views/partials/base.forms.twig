                            <option>CA</option>
                            <option>IL</option>
                            <option>MD</option>
                            <option>NY</option>
                        </select>

                    </p>

                    <p>
                        <input type="checkbox" id="checkbox1" />
                        <label for="checkbox1">Check me out</label>
                    </p>

                    <p>
                        <button type="submit" class="o-btn">Submit</button>
                    </p>
                </fieldset>
            </form>
        </div>
    </div>
