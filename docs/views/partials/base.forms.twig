    <div class="panel-row o-grid">
        <div class="panel-side o-col o-col-3-m">
            <span class="label panel-label">Normal</span>
        </div>
        <div class="panel-content o-col o-col-9-m">
            <form role="form">
                <fieldset>
                    <p>
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" id="exampleInputEmail1" placeholder="Email">
                    </p>

                    <p>
